  "Inbox": {
    "IntervalInSeconds": 15,
    "BatchSize": 50
  },
  "BlobStorage": {
    "Azure": {
      "ContainerName": "chatappblob",
      "ConnectionString": "getFromEnvironemeent",
      "Url": "https://chatappblob.blob.core.windows.net",
      "ContainerNames": [ "public, private" ]
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "ThreadLike.Chat.Infrastructure.Inbox": "Information",
        "ThreadLike.Chat.Infrastructure.Outbox": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./Logfiles/Chats/ChatModuleLog_.txt",
          "fileSizeLimitBytes": 512000, // 512 kb
          "rollingInterval": "Day",
          "retainedFileCountLimit": 50,
          "rollOnFileSizeLimit": true,
          "flushToDiskInterval": "00:00:10",
          "buffered": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [module:{Application}/machine:{MachineName}/Process:{ProcessId}/thread:{ThreadId}] (clientIp:{ClientIp}, Scheme:{RequestScheme}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId" ],
    //"Destructure": [
    //  {
    //    "Name": "",
    //    "Args": { "policy": "" }
    //  }
    //],
    "Properties": {
      "Application": "ThreadLike.Chat.Api"
    }
  }
